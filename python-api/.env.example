# ============================================
# AI Support Co-Pilot - Environment Variables
# ============================================

# ============================================
# APPLICATION CONFIG
# ============================================
APP_NAME="AI Support Co-Pilot API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"

# ============================================
# SUPABASE (Required)
# ============================================
# Obtener de: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# ============================================
# GROQ API (Required)
# ============================================
# Obtener de: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL="llama-3.1-8b-instant"

# ============================================
# AI MODELS
# ============================================
SENTIMENT_MODEL="cardiffnlp/twitter-xlm-roberta-base-sentiment"

# ============================================
# API CONFIGURATION
# ============================================
API_HOST="0.0.0.0"
API_PORT=8000

# ============================================
# CORS
# ============================================
# IMPORTANTE: Para listas, usar formato JSON válido
# Desarrollo: ["*"]
# Producción: ["https://tudominio.com", "https://app.tudominio.com"]
CORS_ORIGINS=["*"]

# ============================================
# LOGGING
# ============================================
# Opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"
